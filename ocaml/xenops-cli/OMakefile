OCAML_LIBS    =
OCAMLINCLUDES = ../xenops
OCAMLPACKS    = xml-light2 stdext stunnel log http-svr oUnit

section
	OCAMLINCLUDES += .
	OCAMLFLAGS = -dtypes -thread -warn-error F
	COMMON_FILES = ../xenops/xenops_interface ../xenops/device_number
	OCamlProgram(xenopstest, test $(COMMON_FILES))
	OCamlDocProgram(xenopstest, test $(COMMON_FILES))

	OCamlProgram(xn, xn $(COMMON_FILES))
	OCamlDocProgram(xn, xn $(COMMON_FILES))

.PHONY: clean
clean:
	rm -f $(CLEAN_OBJS)
	rm -f ./xenopstest



